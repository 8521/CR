<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settings_gray"
    android:padding="@dimen/dp10"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/df_projectinfo_1"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ProjectName"
                style="@style/textstyle_A"/>
            <EditText
                android:id="@+id/df_projectinfo_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_height="2dp"
                android:background="@color/settings_gray"/>
            <TextView
                android:id="@+id/df_projectinfo_4"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ProjectId"
                style="@style/textstyle_A"/>
            <EditText
                android:id="@+id/df_projectinfo_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_height="2dp"
                android:background="@color/settings_gray"/>
            <TextView
                android:id="@+id/df_projectinfo_7"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ProjectAddress"
                style="@style/textstyle_A"/>
            <EditText
                android:id="@+id/df_projectinfo_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_height="2dp"
                android:background="@color/settings_gray"/>
            <TextView
                android:id="@+id/df_projectinfo_18"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ProjectLogo"
                style="@style/textstyle_A"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8">
                <com.ilaquidain.constructionreporter.object.RectangularImageView
                    android:id="@+id/projectlogoview"
                    android:scaleType="centerCrop"
                    android:layout_width="225dp"
                    android:layout_height="1000dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:background="@color/lightgray"/>
                <ImageButton
                    android:id="@+id/deleteprojectlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_delete_black_24dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_height="2dp"
                android:background="@color/settings_gray"/>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabaccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
</RelativeLayout>