<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="@dimen/dp5"
    android:id="@+id/projectcardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/cardview1"
        android:layout_height="match_parent">
        <com.ilaquidain.constructionreporter.object.SquareImageView
            android:id="@+id/ProjectLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_marginStart="@dimen/dp10"/>
        <ImageButton
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/ProjectLogo"
            android:layout_marginEnd="@dimen/dp10"/>
        <TextView
            android:id="@+id/projectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ProjectLogo"
            android:layout_toStartOf="@id/menu_icon"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            style="@style/textstyle_C"
            tools:text="Project 1"/>
        <TextView
            android:id="@+id/projectrefno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectname"
            android:layout_toEndOf="@id/ProjectLogo"
            android:layout_toStartOf="@id/menu_icon"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            style="@style/textstyle_B"
            tools:text="Project No. 0001A"/>
        <TextView
            android:id="@+id/projectaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectrefno"
            android:layout_toEndOf="@id/ProjectLogo"
            android:layout_toStartOf="@id/menu_icon"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            style="@style/textstyle_B"
            tools:text="ABC Street, Long Beach, 98002, CA"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>