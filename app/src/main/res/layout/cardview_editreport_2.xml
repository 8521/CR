<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/projectcardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/dp10">
    <LinearLayout
        android:background="@drawable/selected_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                style="@style/textstyle_C"
                tools:text="Daily Report Dated 8/30/17"/>
        </RelativeLayout>
        <LinearLayout
            android:baselineAligned="false"
            android:visibility="gone"
            android:id="@+id/extended_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:id="@+id/expanded_viewreport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Report"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_mode_edit_black_24dp"
                android:drawablePadding="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/expanded_deletereport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Report"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_delete_forever_black_24dp"
                android:drawablePadding="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/expanded_duplicate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duplicate Report"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_add_black_24dp"
                android:drawablePadding="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>