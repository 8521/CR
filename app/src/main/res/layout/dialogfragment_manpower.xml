<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="@color/settings_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/recyclerviewtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:text="@string/app_name"
            style="@style/textstyle_A"/>
        <View
            android:id="@+id/elemento1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/settings_gray"
            android:layout_below="@id/recyclerviewtitle"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/elemento1"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/recyclerview_manpower"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabaddmanpower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_person_add_black_24dp"
        android:layout_alignTop="@+id/fabaccept"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabaccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/vector_return"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
</android.support.design.widget.CoordinatorLayout>