<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settings_gray"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/white"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <!--reportdate-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TimesheetDate"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/ts_in1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:padding="@dimen/dp5" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--Report time-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Time"
                style="@style/textstyle_A"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TimeIn"
                    style="@style/textstyle_C"
                    android:layout_marginStart="20dp"
                    android:padding="@dimen/dp5"/>
                <TextView
                    android:id="@+id/ts_in2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:maxEms="8"
                    android:layout_alignParentEnd="true"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TimeOut"
                    style="@style/textstyle_C"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/ts_in3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:maxEms="8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/StartBreak"
                    style="@style/textstyle_C"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/ts_in4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:maxEms="8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EndBreak"
                    style="@style/textstyle_C"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/ts_in5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:maxEms="8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--contractor-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ForemanFirstName"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_8in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--subcontractor-->
            <TextView
                android:id="@+id/df_projectinfo_09t"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ForemanLastName"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_9in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--contract_no-->
            <TextView
                android:id="@+id/df_projectinfo_10t"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ContractNo"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_10in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--section-->
            <TextView
                android:id="@+id/df_projectinfo_11t"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Section"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_11in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--weather-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Weather"
                style="@style/textstyle_A"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="@style/textstyle_C"
                    android:text="@string/Sky"/>
                <TextView
                    android:id="@+id/df_projectinfo_12in"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="@style/textstyle_C"
                    android:text="@string/Wind"/>
                <TextView
                    android:id="@+id/df_projectinfo_13in"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="@style/textstyle_C"
                    android:text="@string/Precipitation"/>
                <TextView
                    android:id="@+id/df_projectinfo_14in"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--temperature-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Temperature"
                style="@style/textstyle_A"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="@style/textstyle_C"
                    android:text="@string/High"/>
                <TextView
                    android:id="@+id/df_projectinfo_15in"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_marginStart="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="@style/textstyle_C"
                    android:text="@string/Low"/>
                <TextView
                    android:id="@+id/df_projectinfo_16in"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    style="@style/textstyle_B"
                    android:padding="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--discipline-->
            <TextView
                android:id="@+id/df_projectinfo_10"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Discipline"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_17in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--structure_no-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/StructureNo"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_18in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            <!--station_location-->
            <TextView
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/StationLocation"
                style="@style/textstyle_A"/>
            <TextView
                android:id="@+id/df_projectinfo_19in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                style="@style/textstyle_B"
                android:padding="@dimen/dp5"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/settings_gray"
                android:layout_marginTop="@dimen/dp10"/>
            
            
        </LinearLayout>
</ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabaccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
</RelativeLayout>