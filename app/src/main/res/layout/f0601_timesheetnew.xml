<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativelayout_newreport"
        android:layout_height="match_parent"
        android:background="@color/settings_gray"
        android:layout_width="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rellay1_qc"
                        android:background="@drawable/selected_relative_layout"
                        android:padding="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/imgview1_qc"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/ic_info_outline_black_24dp"
                            android:background="@drawable/rectangular_button2"
                            android:layout_alignParentStart="true"
                            />
                        <TextView
                            android:layout_toEndOf="@id/imgview1_qc"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/TimesheetInformation"
                            style="@style/textstyle_A"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:background="@null"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_gray" />
                    <RelativeLayout
                        android:id="@+id/rellay2_qc"
                        android:background="@drawable/selected_relative_layout"
                        android:padding="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:clickable="false"
                            android:id="@+id/imgview2_qc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/ic_accessibility_black_24dp"
                            android:background="@drawable/rectangular_button2"
                            android:layout_alignParentStart="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/Labor"
                            android:layout_toEndOf="@id/imgview2_qc"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/textstyle_A"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:background="@null"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_gray"/>
                    <RelativeLayout
                        android:id="@+id/rellay3_qc"
                        android:background="@drawable/selected_relative_layout"
                        android:padding="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:clickable="false"
                            android:id="@+id/imgview3_qc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/ic_build_black_24dp"
                            android:background="@drawable/rectangular_button2"
                            android:layout_alignParentStart="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/Equipment"
                            android:layout_toEndOf="@id/imgview3_qc"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/textstyle_A"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:background="@null"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray"/>

                </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:background="@drawable/buttonbackground2"
            android:elevation="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/GeneratingPDFReport"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dp10"
                style="@style/textstyle_A"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabsave"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_save_black_24dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabpdf"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_picture_as_pdf_black_24dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.design.widget.CoordinatorLayout>