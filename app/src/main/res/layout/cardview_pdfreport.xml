<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/projectcardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/dp10">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/selected_element"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/initialview"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                style="@style/textstyle_C"
                tools:text="QC Daily Report"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/extendedview"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/dp10"
                android:padding="@dimen/dp5"
                android:background="@drawable/buttonbackground1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View PDF"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_remove_red_eye_black_24dp"
                android:drawablePadding="10dp"
                android:paddingBottom="@dimen/dp10"
                android:gravity="center"
                android:id="@+id/extended_pdf_view"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:padding="@dimen/dp5"
                android:background="@drawable/buttonbackground1"
                android:layout_weight="1"
                android:text="Delete PDF"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_delete_forever_black_24dp"
                android:drawablePadding="10dp"
                android:paddingBottom="@dimen/dp10"
                android:gravity="center"
                android:id="@+id/extended_pdf_delete"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>