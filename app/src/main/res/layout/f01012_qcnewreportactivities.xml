<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="@color/settings_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="@string/ActivitiesIDs"
            style="@style/textstyle_A"
            android:background="@drawable/boxwithborder_lightbackground"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/elemento1"
            android:layout_marginTop="@dimen/dp10"
            android:paddingBottom="80dp"
            android:id="@+id/recyclerview_manpower"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"/>
</android.support.design.widget.CoordinatorLayout>